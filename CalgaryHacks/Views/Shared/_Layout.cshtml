<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Calgary Events</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" >
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Calgary Events", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Explore", "Index", "Home")</li>
                        <li>@Html.ActionLink("Analytics", "Analytics", "Home")</li>
                        <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        @if (HttpContext.Current.Session["user"] == null)
                        {
                            <li>@Html.ActionLink("Login", "Login", "Home")</li>
                            <li>@Html.ActionLink("Register", "Register", "Home")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("My Chats", "ChooseChat", "Home")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Calgary Events - @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/gmaps")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/chart")
    @RenderSection("scripts", required: false)
</body>
</html>
